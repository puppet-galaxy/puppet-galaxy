. /lib/lsb/init-functions

case "${1:-''}" in
  'start')
  log_daemon_msg "Starting Galaxy"
  echo -e "\n";
  <% if @wk_config %>
  GALAXY_RUN_ALL=1 <%= @directory %>/run.sh --daemon
  <% else %>
  <%=@directory%>/run.sh --daemon
  <% end %>
  log_end_msg 0

        ;;
  'stop')
  log_daemon_msg "Stopping Galaxy"
  echo -e "\n"
  <% if @wk_config %>
  GALAXY_RUN_ALL=1 <%= @directory %>/run.sh --stop-daemon
  <% else %>
  <%= @directory %>/run.sh --stop-daemon
  <% end %>
  log_end_msg 0

        ;;
  'restart')
           # restart commands here
	   $0 stop
	   $0 start
			   
        ;;
  *)      # no parameter specified
        echo "Usage: $SELF start|stop|restart|reload|force-reload|status"
        exit 1
        ;;
esac

